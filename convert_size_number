#include "main.h"
/**
 * convert_size_number - pushes number to specified size
 * @num: number to be pushed
 * @size: Number type being pushed
 *
 * Return: pushed value of num
 */
long int convert_size_number(long int num, int size)
{
	if (size == S_LONG)
		return (num);
	else if (size == S_SHORT)
		return ((short)num);

	return ((int)num);
}
